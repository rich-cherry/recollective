<script
  type="application/json"
  data-section-type="activate-account-page"
  data-section-id="{{ section.id }}"
>
</script>

<section
  class="activate-account"
  data-section-id="{{ section.id }}"
>
  <div class="activate-account__header">
    <h1 class="activate-account__heading">
      {{ 'customer.activate_account.title' | t }}
    </h1>
  </div>

  <div class="activate-account__wrapper">
    <p class="activate-account">
      <em>
        {{ 'customer.activate_account.subtext' | t }}
      </em>
    </p>

    {% form 'activate_customer_password' %}
      {{ form.errors | default_errors }}

    <div id="password">
      <label for="password">
        {{ 'customer.activate_account.password' | t }}
      </label>
      <input
        type="password"
        value=""
        name="customer[password]" id="customer_password"
        password" size="16"
      />
    </div>

    <div id="password_confirm">
      <label for="password_confirmation">
        {{ 'customer.activate_account.password_confirm' | t }}
      </label>
      <input
        type="password"
        value=""
        name="customer[password_confirmation]" id="customer_password_confirmation"
        size="16"
      />
    </div>

    <p class="activate-account__action-bottom">
      <input class="activate-account__button" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
      <span class="activate-account__note">
        {{ 'customer.activate_account.or' | t }}
      </span>
      <input type="submit" class="activate-account__button-cancel" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}" />
    </p>
    {% endform %}
  </div>
</section>
